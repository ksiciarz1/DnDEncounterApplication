<Window x:Class="DnDEncounterApplication.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDEncounterApplication"
        mc:Ignorable="d"
        Title="Replace File?" Height="100" Width="250" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="26,0,0,0" TextWrapping="Wrap" Text="File exists. Do you want to replace it?" VerticalAlignment="Center" Width="198" Grid.ColumnSpan="2"/>
        <Button x:Name="Confirm_Button" Content="Replace" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Click="Confirm_Button_Click"/>
        <Button x:Name="Cancel_Button_Copy" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Click="Cancel_Button_Copy_Click"/>
    </Grid>
</Window>
